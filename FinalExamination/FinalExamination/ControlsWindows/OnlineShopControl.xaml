        <TextBox x:Name="Quantity1" HorizontalAlignment="Left" Height="26" Margin="337,101,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="29"/>
        <Button x:Name="Button2plus" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="371,132,0,0" Height="26" Click="Button2plus_Click"/>
        <Button x:Name="Button2minus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="313,132,0,0" Height="26" Click="Button2minus_Click"/>
        <TextBox x:Name="Quantity2" HorizontalAlignment="Left" Height="26" Margin="337,132,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="29"/>
        <Button x:Name="Button3plus" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="371,163,0,0" Height="26" Click="Button3plus_Click"/>
        <Button x:Name="Button3minus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="313,163,0,0" Height="26" Click="Button3minus_Click"/>
        <TextBox x:Name="Quantity3" HorizontalAlignment="Left" Height="26" Margin="337,163,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="29"/>
        <Button x:Name="Button4plus" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="371,194,0,0" Height="26" Click="Button4plus_Click"/>
        <Button x:Name="Button4minus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="313,194,0,0" Height="26" Click="Button4minus_Click"/>
        <TextBox x:Name="Quantity4" HorizontalAlignment="Left" Height="26" Margin="337,194,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="29"/>
        <Button x:Name="Button5plus" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="371,226,0,0" Height="26" Click="Button5plus_Click"/>
        <Button x:Name="Button5minus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Margin="313,226,0,0" Height="26" Click="Button5minus_Click"/>
        <TextBox x:Name="Quantity5" HorizontalAlignment="Left" Height="26" Margin="337,226,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="29"/>
        <Button x:Name="OrderButton" Content="Order Now" HorizontalAlignment="Left" VerticalAlignment="Top" Width="112" Margin="63,308,0,0" Height="41" Click="OrderButton_Click"/>
        <Button x:Name="ResetButton" Content="Reset Order" HorizontalAlignment="Left" Margin="278,308,0,0" VerticalAlignment="Top" Width="112" Height="41" Click="ResetButton_Click"/>
        <Label x:Name="Header" Content="Online Grocerie Shop" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="105,21,0,0" FontSize="24"/>

    </Grid>
</Window>
